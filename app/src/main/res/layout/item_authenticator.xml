<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="authenticator"
            type="ch.nevis.mobile.sdk.api.localdata.Authenticator" />

        <variable
            name="authenticatorDescriptor"
            type="ch.nevis.exampleapp.coroutines.ui.selectAuthenticator.model.AuthenticatorItemDescriptor" />

        <variable
            name="authenticatorSelectedListener"
            type="ch.nevis.exampleapp.coroutines.ui.selectAuthenticator.AuthenticatorSelectedListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> authenticatorSelectedListener.onAuthenticatorSelected(authenticator)}">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@{authenticatorDescriptor.titleResId}"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>